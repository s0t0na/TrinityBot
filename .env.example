TELEGRAM_TOKEN=your_telegram_bot_token_here
DEBUG_MODE=true

# Comma-separated Telegram user IDs allowed to use the bot (optional)
# e.g., ALLOWED_USERS=12345678,87654321
ALLOWED_USERS=

# Database configuration (prefer DATABASE_URL)
# Example for local dev:
# DATABASE_URL=postgres://trinitybot:trinitybot@localhost:5432/trinitybot?sslmode=disable
DATABASE_URL=

# Alternatively specify components (used if DATABASE_URL is empty)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=trinitybot
POSTGRES_PASSWORD=trinitybot
POSTGRES_DB=trinitybot

# Webhook mode (optional). If empty, long polling is used.
WEBHOOK_URL=
PORT=8443
